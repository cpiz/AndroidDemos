<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cpiz.android.playground.ExButtonTest.TintableImageButtonActivity"
    >

    <com.cpiz.android.playground.ExButtonTest.TintableImageButton
        android:id="@+id/tintableImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:src="@drawable/icon_launcher"
        app:bgTint="@color/image_button_tint_selector"
        app:imgTint="@color/image_button_tint_selector" />

    <com.cpiz.android.playground.ExButtonTest.TintableImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_gallery"
        android:padding="30dp"
        android:src="@drawable/icon_launcher"
        app:bgTint="@color/image_button_tint_selector"
        app:imgTint="#FFFFFF" />

    <com.cpiz.android.playground.ExButtonTest.TintableImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:src="@drawable/icon_launcher" />

</LinearLayout>
